<Window x:Class="HouseFinances.Diagram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HouseFinances"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Diagram" Height="600" Width="800" Icon="/HouseFinances;component/Resources/purse.ico" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid x:Name="gr" Background="#FFAFCAF7">
        <lvc:PieChart Margin="10, 20" LegendLocation="Right" Hoverable="False" DataTooltip="{x:Null}" Series="{Binding Path=MyPie}" Background="White" StartingRotationAngle="0"/>
    </Grid>
</Window>
